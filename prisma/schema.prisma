generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Database {
  id     Int     @id @default(autoincrement())
  value  String  @unique
  label  String  @unique
  Survey Survey[]
}

model Survey {
  id         Int      @id @default(autoincrement())
  database   Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  databaseId Int

  @@index([databaseId])
}
